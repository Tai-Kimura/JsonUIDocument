{
  "type": "View",
  "id": "header",
  "width": "matchParent",
  "height": 64,
  "background": "#FFFFFF",
  "orientation": "horizontal",
  "gravity": "centerVertical",
  "padding": [
    0,
    24
  ],
  "borderWidth": 1,
  "borderColor": "#E5E7EB",
  "child": [
    {},
    {
      "type": "View",
      "orientation": "horizontal",
      "gravity": "centerVertical",
      "child": [
        {
          "type": "Label",
          "id": "logo",
          "text": "JsonUI",
          "fontSize": 24,
          "fontWeight": "bold",
          "fontColor": "#087EA4",
          "onClick": "@{onClickHome}"
        }
      ]
    },
    {
      "type": "View",
      "weight": 1
    },
    {
      "type": "View",
      "orientation": "horizontal",
      "gravity": "centerVertical",
      "child": [
        {
          "type": "Label",
          "style": "nav_link",
          "text": "nav_learn",
          "margins": [
            0,
            16,
            0,
            0
          ],
          "onClick": "@{onClickLearn}"
        },
        {
          "type": "Label",
          "style": "nav_link",
          "text": "nav_reference",
          "margins": [
            0,
            16,
            0,
            0
          ],
          "onClick": "@{onClickReference}"
        },
        {
          "type": "Label",
          "style": "nav_link",
          "text": "nav_platforms",
          "margins": [
            0,
            16,
            0,
            0
          ],
          "onClick": "@{onClickPlatforms}"
        },
        {
          "type": "Label",
          "style": "nav_link",
          "text": "nav_cli",
          "margins": [
            0,
            16,
            0,
            0
          ],
          "onClick": "@{onClickCLI}"
        },
        {
          "type": "Label",
          "style": "nav_link",
          "text": "nav_community",
          "margins": [
            0,
            16,
            0,
            0
          ],
          "onClick": "@{onClickCommunity}"
        },
        {
          "type": "Label",
          "text": "GitHub",
          "fontColor": "#23272F",
          "fontSize": 16,
          "fontWeight": "medium",
          "margins": [
            0,
            24,
            0,
            0
          ],
          "onClick": "@{onClickGitHub}"
        },
        {
          "type": "SelectBox",
          "id": "language_selector",
          "height": 32,
          "margins": [
            0,
            16,
            0,
            0
          ],
          "borderWidth": 0,
          "items": "@{languageItems}",
          "selectedValue": "@{currentLanguage}",
          "onValueChanged": "@{onLanguageChange}"
        }
      ]
    }
  ]
}