{
  "type": "View",
  "orientation": "vertical",
  "width": "matchParent",
  "child": [
    { "data": [{ "class": "ComponentsViewModel", "name": "viewModel" }] },
    {
      "type": "Label",
      "text": "components_text_title",
      "fontSize": 24,
      "fontWeight": "bold",
      "fontColor": "#087EA4"
    },
    { "style": "spacer_16" },
    {
      "type": "View",
      "orientation": "horizontal",
      "width": "matchParent",
      "child": [
        {
          "type": "View",
          "style": "component_card",
          "weight": 1,
          "margins": [0, 8, 0, 0],
          "onClick": "@{viewModel.onClickLabelDetail}",
          "child": [
            {
              "type": "Label",
              "text": "Label",
              "fontSize": 18,
              "fontWeight": "semibold",
              "fontColor": "#23272F"
            },
            { "style": "spacer_8" },
            {
              "type": "Label",
              "text": "components_label_desc",
              "fontSize": 14,
              "fontColor": "#5E687E"
            }
          ]
        },
        {
          "type": "View",
          "style": "component_card",
          "weight": 1,
          "margins": [0, 8, 0, 0],
          "onClick": "@{viewModel.onClickTextFieldDetail}",
          "child": [
            {
              "type": "Label",
              "text": "TextField",
              "fontSize": 18,
              "fontWeight": "semibold",
              "fontColor": "#23272F"
            },
            { "style": "spacer_8" },
            {
              "type": "Label",
              "text": "components_textfield_desc",
              "fontSize": 14,
              "fontColor": "#5E687E"
            }
          ]
        },
        {
          "type": "View",
          "style": "component_card",
          "weight": 1,
          "onClick": "@{viewModel.onClickTextViewDetail}",
          "child": [
            {
              "type": "Label",
              "text": "TextView",
              "fontSize": 18,
              "fontWeight": "semibold",
              "fontColor": "#23272F"
            },
            { "style": "spacer_8" },
            {
              "type": "Label",
              "text": "components_textview_desc",
              "fontSize": 14,
              "fontColor": "#5E687E"
            }
          ]
        }
      ]
    }
  ]
}
