{
  "type": "View",
  "id": "cli_table_row_container",
  "orientation": "vertical",
  "width": "matchParent",
  "child": [
    { "data": [
      { "name": "name", "class": "String" },
      { "name": "description", "class": "String" },
      { "name": "dividerVisibility", "class": "String" }
    ] },
    {
      "type": "View",
      "orientation": "horizontal",
      "width": "matchParent",
      "padding": [0, 16],
      "child": [
        {
          "type": "Label",
          "text": "@{name}",
          "fontSize": 13,
          "fontColor": "#1F2937",
          "font": "monospace",
          "weight": 2,
          "padding": [12]
        },
        {
          "type": "View",
          "width": 1,
          "height": "matchParent",
          "background": "#E5E7EB"
        },
        {
          "type": "Label",
          "text": "@{description}",
          "fontSize": 13,
          "fontColor": "#4B5563",
          "weight": 5,
          "padding": [12]
        }
      ]
    },
    {
      "type": "View",
      "width": "matchParent",
      "height": 1,
      "background": "#E5E7EB",
      "visibility": "@{dividerVisibility}"
    }
  ]
}
