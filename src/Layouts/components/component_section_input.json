{
  "type": "View",
  "orientation": "vertical",
  "width": "matchParent",
  "child": [
    { "data": [{ "class": "ComponentsViewModel", "name": "viewModel" }] },
    {
      "type": "Label",
      "text": "components_input_title",
      "fontSize": 24,
      "fontWeight": "bold",
      "fontColor": "#087EA4"
    },
    { "style": "spacer_16" },
    {
      "type": "View",
      "orientation": "horizontal",
      "width": "matchParent",
      "child": [
        {
          "type": "View",
          "style": "component_card",
          "weight": 1,
          "margins": [0, 8, 0, 0],
          "onClick": "@{viewModel.onClickButtonDetail}",
          "child": [
            {
              "type": "Label",
              "text": "Button",
              "fontSize": 18,
              "fontWeight": "semibold",
              "fontColor": "#23272F"
            },
            { "style": "spacer_8" },
            {
              "type": "Label",
              "text": "components_button_desc",
              "fontSize": 14,
              "fontColor": "#5E687E"
            }
          ]
        },
        {
          "type": "View",
          "style": "component_card",
          "weight": 1,
          "margins": [0, 8, 0, 0],
          "onClick": "@{viewModel.onClickSwitchDetail}",
          "child": [
            {
              "type": "Label",
              "text": "Switch",
              "fontSize": 18,
              "fontWeight": "semibold",
              "fontColor": "#23272F"
            },
            { "style": "spacer_8" },
            {
              "type": "Label",
              "text": "components_switch_desc",
              "fontSize": 14,
              "fontColor": "#5E687E"
            }
          ]
        },
        {
          "type": "View",
          "style": "component_card",
          "weight": 1,
          "onClick": "@{viewModel.onClickSliderDetail}",
          "child": [
            {
              "type": "Label",
              "text": "Slider",
              "fontSize": 18,
              "fontWeight": "semibold",
              "fontColor": "#23272F"
            },
            { "style": "spacer_8" },
            {
              "type": "Label",
              "text": "components_slider_desc",
              "fontSize": 14,
              "fontColor": "#5E687E"
            }
          ]
        }
      ]
    },
    { "style": "spacer_16" },
    {
      "type": "View",
      "orientation": "horizontal",
      "width": "matchParent",
      "child": [
        {
          "type": "View",
          "style": "component_card",
          "weight": 1,
          "margins": [0, 8, 0, 0],
          "onClick": "@{viewModel.onClickSelectBoxDetail}",
          "child": [
            {
              "type": "Label",
              "text": "SelectBox",
              "fontSize": 18,
              "fontWeight": "semibold",
              "fontColor": "#23272F"
            },
            { "style": "spacer_8" },
            {
              "type": "Label",
              "text": "components_selectbox_desc",
              "fontSize": 14,
              "fontColor": "#5E687E"
            }
          ]
        },
        {
          "type": "View",
          "style": "component_card",
          "weight": 1,
          "margins": [0, 8, 0, 0],
          "onClick": "@{viewModel.onClickRadioDetail}",
          "child": [
            {
              "type": "Label",
              "text": "Radio",
              "fontSize": 18,
              "fontWeight": "semibold",
              "fontColor": "#23272F"
            },
            { "style": "spacer_8" },
            {
              "type": "Label",
              "text": "components_radio_desc",
              "fontSize": 14,
              "fontColor": "#5E687E"
            }
          ]
        },
        {
          "type": "View",
          "weight": 1
        }
      ]
    }
  ]
}
