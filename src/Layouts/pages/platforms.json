{
  "type": "View",
  "id": "platforms_page",
  "data": [
    {"class": "PlatformsViewModel", "name": "viewModel"}
  ],
  "width": "matchParent",
  "orientation": "vertical",
  "child": [
    {
      "type": "View",
      "id": "platforms_hero",
      "width": "matchParent",
      "padding": [48, 24],
      "orientation": "vertical",
      "gravity": "center",
      "background": "#F6F7F9",
      "child": [
        {
          "type": "Label",
          "text": "platforms_title",
          "fontSize": 48,
          "fontWeight": "bold",
          "fontColor": "#23272F",
          "textAlign": "Center"
        },
        { "style": "spacer_16" },
        {
          "type": "Label",
          "text": "platforms_subtitle",
          "fontSize": 20,
          "fontColor": "#5E687E",
          "textAlign": "Center"
        }
      ]
    },
    {
      "type": "View",
      "id": "platforms_content",
      "width": "matchParent",
      "padding": [48, 24],
      "orientation": "vertical",
      "background": "#FFFFFF",
      "child": [
        {
          "type": "View",
          "style": "platform_detail_card",
          "orientation": "vertical",
          "width": "matchParent",
          "child": [
            {
              "type": "View",
              "orientation": "horizontal",
              "width": "matchParent",
              "gravity": "centerVertical",
              "child": [
                {
                  "type": "Label",
                  "text": "platform_swift_title",
                  "fontSize": 28,
                  "fontWeight": "bold",
                  "fontColor": "#FA7343"
                },
                { "type": "View", "weight": 1 },
                {
                  "type": "Button",
                  "style": "button_outline_swift",
                  "text": "platforms_view_docs",
                  "onClick": "viewModel.onClickSwiftDocs"
                },
                { "type": "View", "width": 8 },
                {
                  "type": "Button",
                  "style": "button_outline_swift",
                  "text": "platforms_view_github",
                  "onClick": "viewModel.onClickSwiftGitHub"
                }
              ]
            },
            { "style": "spacer_16" },
            {
              "type": "Label",
              "text": "platform_swift_desc",
              "fontSize": 16,
              "fontColor": "#5E687E"
            },
            { "style": "spacer_8" },
            {
              "type": "Label",
              "text": "platforms_swift_features",
              "fontSize": 14,
              "fontColor": "#5E687E"
            },
            { "style": "spacer_16" },
            {
              "type": "Label",
              "text": "platforms_install",
              "fontSize": 14,
              "fontWeight": "semibold",
              "fontColor": "#23272F"
            },
            { "style": "spacer_8" },
            {
              "type": "View",
              "style": "code_block",
              "child": [
                {
                  "type": "Label",
                  "text": "# CocoaPods\npod 'SwiftJsonUI'\n\n# Swift Package Manager\n.package(url: \"https://github.com/user/SwiftJsonUI.git\")",
                  "fontSize": 12,
                  "fontColor": "#D4D4D4",
                  "fontFamily": "monospace"
                }
              ]
            }
          ]
        },
        { "style": "spacer_24" },
        {
          "type": "View",
          "style": "platform_detail_card",
          "orientation": "vertical",
          "width": "matchParent",
          "child": [
            {
              "type": "View",
              "orientation": "horizontal",
              "width": "matchParent",
              "gravity": "centerVertical",
              "child": [
                {
                  "type": "Label",
                  "text": "platform_kotlin_title",
                  "fontSize": 28,
                  "fontWeight": "bold",
                  "fontColor": "#7F52FF"
                },
                { "type": "View", "weight": 1 },
                {
                  "type": "Button",
                  "style": "button_outline_kotlin",
                  "text": "platforms_view_docs",
                  "onClick": "viewModel.onClickKotlinDocs"
                },
                { "type": "View", "width": 8 },
                {
                  "type": "Button",
                  "style": "button_outline_kotlin",
                  "text": "platforms_view_github",
                  "onClick": "viewModel.onClickKotlinGitHub"
                }
              ]
            },
            { "style": "spacer_16" },
            {
              "type": "Label",
              "text": "platform_kotlin_desc",
              "fontSize": 16,
              "fontColor": "#5E687E"
            },
            { "style": "spacer_8" },
            {
              "type": "Label",
              "text": "platforms_kotlin_features",
              "fontSize": 14,
              "fontColor": "#5E687E"
            },
            { "style": "spacer_16" },
            {
              "type": "Label",
              "text": "platforms_install",
              "fontSize": 14,
              "fontWeight": "semibold",
              "fontColor": "#23272F"
            },
            { "style": "spacer_8" },
            {
              "type": "View",
              "style": "code_block",
              "child": [
                {
                  "type": "Label",
                  "text": "// build.gradle.kts\ndependencies {\n    implementation(\"com.tanosys:kotlinjsonui:1.0.0\")\n}",
                  "fontSize": 12,
                  "fontColor": "#D4D4D4",
                  "fontFamily": "monospace"
                }
              ]
            }
          ]
        },
        { "style": "spacer_24" },
        {
          "type": "View",
          "style": "platform_detail_card",
          "orientation": "vertical",
          "width": "matchParent",
          "child": [
            {
              "type": "View",
              "orientation": "horizontal",
              "width": "matchParent",
              "gravity": "centerVertical",
              "child": [
                {
                  "type": "Label",
                  "text": "platform_react_title",
                  "fontSize": 28,
                  "fontWeight": "bold",
                  "fontColor": "#61DAFB"
                },
                { "type": "View", "weight": 1 },
                {
                  "type": "Button",
                  "style": "button_outline_react",
                  "text": "platforms_view_docs",
                  "onClick": "viewModel.onClickReactDocs"
                },
                { "type": "View", "width": 8 },
                {
                  "type": "Button",
                  "style": "button_outline_react",
                  "text": "platforms_view_github",
                  "onClick": "viewModel.onClickReactGitHub"
                }
              ]
            },
            { "style": "spacer_16" },
            {
              "type": "Label",
              "text": "platform_react_desc",
              "fontSize": 16,
              "fontColor": "#5E687E"
            },
            { "style": "spacer_8" },
            {
              "type": "Label",
              "text": "platforms_react_features",
              "fontSize": 14,
              "fontColor": "#5E687E"
            },
            { "style": "spacer_16" },
            {
              "type": "Label",
              "text": "platforms_install",
              "fontSize": 14,
              "fontWeight": "semibold",
              "fontColor": "#23272F"
            },
            { "style": "spacer_8" },
            {
              "type": "View",
              "style": "code_block",
              "child": [
                {
                  "type": "Label",
                  "text": "# npm\nnpm install react-jsonui\n\n# yarn\nyarn add react-jsonui",
                  "fontSize": 12,
                  "fontColor": "#D4D4D4",
                  "fontFamily": "monospace"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
