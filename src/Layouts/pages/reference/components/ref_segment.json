{
  "type": "View",
  "id": "ref_segment_page",
  "width": "matchParent",
  "height": "matchParent",
  "orientation": "horizontal",
  "child": [
    {},
    {
      "type": "ReferenceSidebar"
    },
    {
      "type": "ScrollView",
      "id": "ref_segment_scroll",
      "width": "matchParent",
      "height": "matchParent",
      "child": [
        {
          "type": "View",
          "id": "ref_segment_content",
          "width": "matchParent",
          "padding": [
            48,
            24
          ],
          "orientation": "vertical",
          "background": "#FFFFFF",
          "child": [
            {
              "type": "Label",
              "text": "ref_segment_title",
              "fontSize": 32,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "bottomMargin": 16
            },
            {
              "type": "Label",
              "text": "ref_segment_desc",
              "fontSize": 16,
              "fontColor": "#4B5563",
              "bottomMargin": 24,
              "lineHeight": 1.6
            },
            {
              "type": "View",
              "orientation": "horizontal",
              "bottomMargin": 32,
              "child": [
                {
                  "include": "components/platform_badge_swift"
                }
              ]
            },
            {
              "type": "Label",
              "text": "comp_detail_platform_support",
              "fontSize": 20,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "bottomMargin": 16
            },
            {
              "type": "View",
              "orientation": "vertical",
              "bottomMargin": 32,
              "child": [
                {
                  "type": "Label",
                  "text": "comp_segment_uikit",
                  "fontSize": 14,
                  "fontColor": "#4B5563",
                  "bottomMargin": 8
                },
                {
                  "type": "Label",
                  "text": "comp_segment_swiftui",
                  "fontSize": 14,
                  "fontColor": "#4B5563"
                }
              ]
            },
            {
              "type": "Label",
              "text": "comp_detail_attributes",
              "fontSize": 20,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "bottomMargin": 16
            },
            {
              "type": "Collection",
              "width": "matchParent",
              "borderWidth": 1,
              "borderColor": "#E5E7EB",
              "cornerRadius": 8,
              "clipToBounds": true,
              "columns": 1,
              "headerClasses": [
                "components/ref_attribute_table_header"
              ],
              "cellClasses": [
                "components/ref_attribute_row"
              ],
              "items": "@{segmentAttributes}"
            },
            {
              "type": "Label",
              "text": "comp_detail_basic_example",
              "fontSize": 20,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "topMargin": 32,
              "bottomMargin": 12
            },
            {
              "type": "CodeBlock",
              "file": "segment_example.json",
              "language": "json",
              "showPreview": false
            }
          ]
        }
      ]
    }
  ]
}