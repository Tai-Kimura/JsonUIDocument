{
  "type": "View",
  "id": "ref_collection_page",
  "width": "matchParent",
  "height": "matchParent",
  "orientation": "horizontal",
  "child": [
    { "data": [{ "class": "RefCollectionViewModel", "name": "viewModel" }] },
    { "type": "ReferenceSidebar" },
    {
      "type": "ScrollView",
      "id": "ref_collection_scroll",
      "width": "matchParent",
      "height": "matchParent",
      "child": [
        {
          "type": "View",
          "id": "ref_collection_content",
          "width": "matchParent",
          "padding": [48, 24],
          "orientation": "vertical",
          "background": "#FFFFFF",
          "child": [
            {
              "type": "Label",
              "text": "ref_collection_title",
              "fontSize": 32,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "bottomMargin": 16
            },
            {
              "type": "Label",
              "text": "ref_collection_desc",
              "fontSize": 16,
              "fontColor": "#4B5563",
              "bottomMargin": 24,
              "lineHeight": 1.6
            },
            {
              "type": "View",
              "orientation": "horizontal",
              "bottomMargin": 32,
              "child": [
                { "include": "components/platform_badge_swift" },
                { "type": "View", "width": 8 },
                { "include": "components/platform_badge_kotlin" },
                { "type": "View", "width": 8 },
                { "include": "components/platform_badge_react" }
              ]
            },
            {
              "type": "Label",
              "text": "comp_detail_platform_support",
              "fontSize": 20,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "bottomMargin": 16
            },
            {
              "type": "View",
              "orientation": "vertical",
              "bottomMargin": 32,
              "child": [
                { "type": "Label", "text": "comp_collection_uikit", "fontSize": 14, "fontColor": "#4B5563", "bottomMargin": 8 },
                { "type": "Label", "text": "comp_collection_swiftui", "fontSize": 14, "fontColor": "#4B5563", "bottomMargin": 8 },
                { "type": "Label", "text": "comp_collection_compose", "fontSize": 14, "fontColor": "#4B5563", "bottomMargin": 8 },
                { "type": "Label", "text": "comp_collection_android_xml", "fontSize": 14, "fontColor": "#4B5563", "bottomMargin": 8 },
                { "type": "Label", "text": "comp_collection_react", "fontSize": 14, "fontColor": "#4B5563" }
              ]
            },
            {
              "type": "Label",
              "text": "comp_detail_attributes",
              "fontSize": 20,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "bottomMargin": 16
            },
            {
              "type": "Collection",
              "width": "matchParent",
              "borderWidth": 1,
              "borderColor": "#E5E7EB",
              "cornerRadius": 8,
              "clipToBounds": true,
              "columnCount": 1,
              "headerClasses": ["components/ref_attribute_table_header"],
              "cellClasses": ["components/ref_attribute_row"],
              "items": "@{viewModel.collectionAttributes}"
            },
            {
              "type": "Label",
              "text": "comp_detail_basic_example",
              "fontSize": 20,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "topMargin": 32,
              "bottomMargin": 12
            },
            {
              "type": "CodeBlock",
              "file": "collection_example.json",
              "language": "json",
              "showPreview": false
            }
          ]
        }
      ]
    }
  ]
}
