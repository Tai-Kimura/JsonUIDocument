{
  "type": "View",
  "id": "components_page",
  "width": "matchParent",
  "orientation": "vertical",
  "child": [
    { "data": [{ "class": "ComponentsViewModel", "name": "viewModel" }] },
    {
      "type": "View",
      "id": "components_hero",
      "width": "matchParent",
      "padding": [48, 24],
      "orientation": "vertical",
      "gravity": "center",
      "background": "#F6F7F9",
      "child": [
        {
          "type": "Label",
          "text": "components_title",
          "fontSize": 48,
          "fontWeight": "bold",
          "fontColor": "#23272F",
          "textAlign": "Center"
        },
        { "style": "spacer_16" },
        {
          "type": "Label",
          "text": "components_subtitle",
          "fontSize": 20,
          "fontColor": "#5E687E",
          "textAlign": "Center"
        }
      ]
    },
    {
      "type": "View",
      "id": "components_content",
      "width": "matchParent",
      "padding": [48, 24],
      "orientation": "vertical",
      "background": "#FFFFFF",
      "child": [
        {
          "type": "Label",
          "text": "components_layout_title",
          "fontSize": 24,
          "fontWeight": "bold",
          "fontColor": "#087EA4"
        },
        { "style": "spacer_16" },
        {
          "type": "View",
          "orientation": "horizontal",
          "width": "matchParent",
          "child": [
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "margins": [0, 8, 0, 0],
              "onClick": "@{viewModel.onClickViewDetail}",
              "child": [
                {
                  "type": "Label",
                  "text": "View",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "components_view_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            },
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "margins": [0, 8, 0, 0],
              "onClick": "@{viewModel.onClickScrollViewDetail}",
              "child": [
                {
                  "type": "Label",
                  "text": "ScrollView",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "components_scroll_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            },
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "onClick": "@{viewModel.onClickCollectionDetail}",
              "child": [
                {
                  "type": "Label",
                  "text": "Collection",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "components_collection_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            }
          ]
        },
        { "style": "spacer_48" },
        {
          "type": "Label",
          "text": "components_text_title",
          "fontSize": 24,
          "fontWeight": "bold",
          "fontColor": "#087EA4"
        },
        { "style": "spacer_16" },
        {
          "type": "View",
          "orientation": "horizontal",
          "width": "matchParent",
          "child": [
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "margins": [0, 8, 0, 0],
              "onClick": "@{viewModel.onClickLabelDetail}",
              "child": [
                {
                  "type": "Label",
                  "text": "Label",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "components_label_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            },
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "margins": [0, 8, 0, 0],
              "onClick": "@{viewModel.onClickTextFieldDetail}",
              "child": [
                {
                  "type": "Label",
                  "text": "TextField",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "components_textfield_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            },
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "onClick": "@{viewModel.onClickTextViewDetail}",
              "child": [
                {
                  "type": "Label",
                  "text": "TextView",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "components_textview_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            }
          ]
        },
        { "style": "spacer_48" },
        {
          "type": "Label",
          "text": "components_input_title",
          "fontSize": 24,
          "fontWeight": "bold",
          "fontColor": "#087EA4"
        },
        { "style": "spacer_16" },
        {
          "type": "View",
          "orientation": "horizontal",
          "width": "matchParent",
          "child": [
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "margins": [0, 8, 0, 0],
              "onClick": "@{viewModel.onClickButtonDetail}",
              "child": [
                {
                  "type": "Label",
                  "text": "Button",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "components_button_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            },
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "margins": [0, 8, 0, 0],
              "onClick": "@{viewModel.onClickSwitchDetail}",
              "child": [
                {
                  "type": "Label",
                  "text": "Switch",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "components_switch_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            },
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "onClick": "@{viewModel.onClickSliderDetail}",
              "child": [
                {
                  "type": "Label",
                  "text": "Slider",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "components_slider_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            }
          ]
        },
        { "style": "spacer_48" },
        {
          "type": "View",
          "orientation": "horizontal",
          "gravity": "center",
          "child": [
            {
              "type": "Button",
              "style": "button_outline",
              "text": "components_prev",
              "onClick": "@{viewModel.onClickQuickStart}"
            },
            { "type": "View", "width": 16 },
            {
              "type": "Button",
              "style": "button_primary",
              "text": "components_next",
              "onClick": "@{viewModel.onClickStyling}"
            }
          ]
        }
      ]
    }
  ]
}
