{
  "type": "View",
  "id": "data_binding_page",
  "width": "matchParent",
  "orientation": "vertical",
  "child": [
    {},
    {
      "type": "View",
      "id": "data_binding_hero",
      "width": "matchParent",
      "padding": [
        48,
        24
      ],
      "orientation": "vertical",
      "gravity": "center",
      "background": "#F6F7F9",
      "child": [
        {
          "type": "Label",
          "text": "data_binding_title",
          "fontSize": 48,
          "fontWeight": "bold",
          "fontColor": "#23272F",
          "textAlign": "Center"
        },
        {
          "style": "spacer_16"
        },
        {
          "type": "Label",
          "text": "data_binding_subtitle",
          "fontSize": 20,
          "fontColor": "#5E687E",
          "textAlign": "Center"
        }
      ]
    },
    {
      "type": "View",
      "id": "data_binding_content",
      "width": "matchParent",
      "padding": [
        48,
        24
      ],
      "orientation": "vertical",
      "background": "#FFFFFF",
      "child": [
        {
          "type": "Label",
          "text": "data_binding_basics_title",
          "fontSize": 24,
          "fontWeight": "bold",
          "fontColor": "#087EA4"
        },
        {
          "style": "spacer_8"
        },
        {
          "type": "Label",
          "text": "data_binding_basics_desc",
          "fontSize": 16,
          "fontColor": "#5E687E"
        },
        {
          "style": "spacer_16"
        },
        {
          "type": "CodeBlock",
          "file": "data_binding.json",
          "language": "json"
        },
        {
          "style": "spacer_48"
        },
        {
          "type": "Label",
          "text": "data_binding_syntax_title",
          "fontSize": 24,
          "fontWeight": "bold",
          "fontColor": "#087EA4"
        },
        {
          "style": "spacer_16"
        },
        {
          "type": "View",
          "orientation": "horizontal",
          "width": "matchParent",
          "child": [
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "margins": [
                0,
                8,
                0,
                0
              ],
              "child": [
                {
                  "type": "Label",
                  "text": "data_binding_syntax_property",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#087EA4",
                  "font": "monospace"
                },
                {
                  "style": "spacer_8"
                },
                {
                  "type": "Label",
                  "text": "data_binding_property_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            },
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "margins": [
                0,
                8,
                0,
                0
              ],
              "child": [
                {
                  "type": "Label",
                  "text": "data_binding_syntax_nested",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#087EA4",
                  "font": "monospace"
                },
                {
                  "style": "spacer_8"
                },
                {
                  "type": "Label",
                  "text": "data_binding_nested_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            },
            {
              "type": "View",
              "style": "component_card",
              "weight": 1,
              "child": [
                {
                  "type": "Label",
                  "text": "data_binding_syntax_item",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#087EA4",
                  "font": "monospace"
                },
                {
                  "style": "spacer_8"
                },
                {
                  "type": "Label",
                  "text": "data_binding_item_desc",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            }
          ]
        },
        {
          "style": "spacer_48"
        },
        {
          "type": "Label",
          "text": "data_binding_collections_title",
          "fontSize": 24,
          "fontWeight": "bold",
          "fontColor": "#087EA4"
        },
        {
          "style": "spacer_8"
        },
        {
          "type": "Label",
          "text": "data_binding_collections_desc",
          "fontSize": 16,
          "fontColor": "#5E687E"
        },
        {
          "style": "spacer_16"
        },
        {
          "type": "CodeBlock",
          "file": "collection_example.json",
          "language": "json"
        },
        {
          "style": "spacer_48"
        },
        {
          "type": "View",
          "orientation": "horizontal",
          "gravity": "center",
          "child": [
            {
              "type": "Button",
              "style": "button_outline",
              "text": "data_binding_prev",
              "onClick": "@{onClickStyling}"
            },
            {
              "type": "View",
              "width": 16
            },
            {
              "type": "Button",
              "style": "button_primary",
              "text": "data_binding_next",
              "onClick": "@{onClickLearn}"
            }
          ]
        }
      ]
    }
  ]
}