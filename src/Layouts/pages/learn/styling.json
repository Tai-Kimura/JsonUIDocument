{
  "type": "View",
  "id": "styling_page",
  "width": "matchParent",
  "orientation": "vertical",
  "child": [
    { "data": [{ "class": "LearnSubPageViewModel", "name": "viewModel" }] },
    {
      "type": "View",
      "id": "styling_hero",
      "width": "matchParent",
      "padding": [48, 24],
      "orientation": "vertical",
      "gravity": "center",
      "background": "#F6F7F9",
      "child": [
        {
          "type": "Label",
          "text": "styling_title",
          "fontSize": 48,
          "fontWeight": "bold",
          "fontColor": "#23272F",
          "textAlign": "Center"
        },
        { "style": "spacer_16" },
        {
          "type": "Label",
          "text": "styling_subtitle",
          "fontSize": 20,
          "fontColor": "#5E687E",
          "textAlign": "Center"
        }
      ]
    },
    {
      "type": "View",
      "id": "styling_content",
      "width": "matchParent",
      "padding": [48, 24],
      "orientation": "vertical",
      "background": "#FFFFFF",
      "child": [
        {
          "type": "Label",
          "text": "styling_inline_title",
          "fontSize": 24,
          "fontWeight": "bold",
          "fontColor": "#087EA4"
        },
        { "style": "spacer_8" },
        {
          "type": "Label",
          "text": "styling_inline_desc",
          "fontSize": 16,
          "fontColor": "#5E687E"
        },
        { "style": "spacer_16" },
        {
          "type": "CodeBlock",
          "file": "view_reference.json",
          "language": "json"
        },
        { "style": "spacer_48" },
        {
          "type": "Label",
          "text": "styling_template_title",
          "fontSize": 24,
          "fontWeight": "bold",
          "fontColor": "#087EA4"
        },
        { "style": "spacer_8" },
        {
          "type": "Label",
          "text": "styling_template_desc",
          "fontSize": 16,
          "fontColor": "#5E687E"
        },
        { "style": "spacer_16" },
        {
          "type": "CodeBlock",
          "file": "style_example.json",
          "language": "json"
        },
        { "style": "spacer_48" },
        {
          "type": "Label",
          "text": "styling_attributes_title",
          "fontSize": 24,
          "fontWeight": "bold",
          "fontColor": "#087EA4"
        },
        { "style": "spacer_16" },
        {
          "type": "View",
          "orientation": "horizontal",
          "width": "matchParent",
          "child": [
            {
              "type": "View",
              "weight": 1,
              "orientation": "vertical",
              "margins": [0, 16, 0, 0],
              "child": [
                {
                  "type": "Label",
                  "text": "styling_size_title",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "• width\n• height\n• padding\n• margins",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            },
            {
              "type": "View",
              "weight": 1,
              "orientation": "vertical",
              "margins": [0, 16, 0, 0],
              "child": [
                {
                  "type": "Label",
                  "text": "styling_color_title",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "• background\n• fontColor\n• borderColor",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            },
            {
              "type": "View",
              "weight": 1,
              "orientation": "vertical",
              "child": [
                {
                  "type": "Label",
                  "text": "styling_text_title",
                  "fontSize": 18,
                  "fontWeight": "semibold",
                  "fontColor": "#23272F"
                },
                { "style": "spacer_8" },
                {
                  "type": "Label",
                  "text": "• fontSize\n• fontWeight\n• textAlign",
                  "fontSize": 14,
                  "fontColor": "#5E687E"
                }
              ]
            }
          ]
        },
        { "style": "spacer_48" },
        {
          "type": "View",
          "orientation": "horizontal",
          "gravity": "center",
          "child": [
            {
              "type": "Button",
              "style": "button_outline",
              "text": "styling_prev",
              "onClick": "@{viewModel.onClickComponents}"
            },
            { "type": "View", "width": 16 },
            {
              "type": "Button",
              "style": "button_primary",
              "text": "styling_next",
              "onClick": "@{viewModel.onClickDataBinding}"
            }
          ]
        }
      ]
    }
  ]
}
