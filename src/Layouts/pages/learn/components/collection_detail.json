{
  "type": "View",
  "id": "collection_detail_page",
  "width": "matchParent",
  "orientation": "vertical",
  "child": [
    { "data": [{ "class": "CollectionDetailViewModel", "name": "viewModel" }] },
    {
      "type": "ScrollView",
      "id": "collection_detail_scroll",
      "width": "matchParent",
      "height": "matchParent",
      "child": [
        {
          "type": "View",
          "id": "collection_detail_content",
          "width": "matchParent",
          "padding": [48, 24],
          "orientation": "vertical",
          "background": "#FFFFFF",
          "child": [
            {
              "type": "Label",
              "text": "Collection",
              "fontSize": 32,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "marginBottom": 8
            },
            {
              "type": "Label",
              "text": "A powerful grid-based layout component for displaying lists of data with customizable cells, headers, and footers. Supports sections with different column counts.",
              "fontSize": 16,
              "fontColor": "#4B5563",
              "marginBottom": 24,
              "lineHeight": 1.6
            },
            {
              "type": "View",
              "orientation": "horizontal",
              "marginBottom": 24,
              "child": [
                { "include": "components/platform_badge_swift" },
                { "type": "View", "width": 8 },
                { "include": "components/platform_badge_kotlin" }
              ]
            },
            {
              "type": "Label",
              "text": "Platform Support",
              "fontSize": 20,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "marginBottom": 12
            },
            {
              "type": "View",
              "orientation": "vertical",
              "marginBottom": 24,
              "child": [
                { "type": "Label", "text": "• UIKit: Full support - Maps to SJUICollectionView", "fontSize": 14, "fontColor": "#4B5563", "marginBottom": 4 },
                { "type": "Label", "text": "• SwiftUI: Partial support - List/LazyVGrid/LazyHGrid", "fontSize": 14, "fontColor": "#4B5563", "marginBottom": 4 },
                { "type": "Label", "text": "• Jetpack Compose: Full support - LazyGrid with sections", "fontSize": 14, "fontColor": "#4B5563", "marginBottom": 4 },
                { "type": "Label", "text": "• Android XML: Maps to RecyclerView", "fontSize": 14, "fontColor": "#4B5563" }
              ]
            },
            {
              "type": "Label",
              "text": "Attributes",
              "fontSize": 20,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "marginBottom": 12
            },
            {
              "type": "Collection",
              "width": "matchParent",
              "borderWidth": 1,
              "borderColor": "#E5E7EB",
              "cornerRadius": 8,
              "clipToBounds": true,
              "columnCount": 1,
              "headerClasses": ["components/attribute_table_header"],
              "cellClasses": ["components/attribute_row"],
              "items": "@{viewModel.collectionAttributes}"
            },
            {
              "type": "Label",
              "text": "Basic Example",
              "fontSize": 20,
              "fontWeight": "bold",
              "fontColor": "#23272F",
              "marginTop": 32,
              "marginBottom": 12
            },
            {
              "type": "CodeBlock",
              "file": "collection_example.json",
              "language": "json",
              "showPreview": false
            }
          ]
        }
      ]
    }
  ]
}
